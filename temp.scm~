(define (planar x y)
  (cons x y))

(define (real c)
  (car c))

(define (imaginary c)
  (cdr c))

(define (radius c)
  (sqrt (square (+ (real c) (imaginary c)))))

(define (angle c)
  (atan (imaginary c) (real c)))

(define (add c1 c2)
  (planar
   (+ (real c1) (real c2))
   (+ (imaginary c1) (imaginary c2))))
